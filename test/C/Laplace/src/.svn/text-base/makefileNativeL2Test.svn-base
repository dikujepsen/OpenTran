SRCDIR = ./../../../src/application_cpp/
BUILDDIR = ./
BINDIR = ./../../../bin/
LIBDIR = ./../../../lib/sgpp/
OBJS = NativeCppL2Test.o

default : $(OBJS)
	$(CC) $(LFLAGS) $(BUILDDIR)NativeCppL2Test.o $(LIBDIR)$(LIBNAME) -o $(BINDIR)$(BINNAME) -lOpenCL
	cp $(BINDIR)$(BINNAME) $(BINDIR)L2Test
	
NativeCppL2Test.o : $(SRCDIR)NativeCppL2Test.cpp
	$(CC) $(CFLAGS) -o $(BUILDDIR)NativeCppL2Test.o $(SRCDIR)NativeCppL2Test.cpp
		
clean :
	rm *
