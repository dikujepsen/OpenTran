SRCDIR = ./../../../src/application_cpp/
BUILDDIR = ./
BINDIR = ./../../../bin/
LIBDIR = ./../../../lib/sgpp/
OBJS = NativeCppHeatEquationSolverOCLMPI.o
OPENCL = -lOpenCL

default : $(OBJS)
	$(CC) $(LFLAGS) $(BUILDDIR)NativeCppHeatEquationSolverOCLMPI.o $(LIBDIR)$(LIBNAME) -o $(BINDIR)$(BINNAME) $(OPENCL)
	cp $(BINDIR)$(BINNAME) $(BINDIR)HESolverOCLMPI
	
NativeCppHeatEquationSolverOCLMPI.o : $(SRCDIR)NativeCppHeatEquationSolverOCLMPI.cpp
	$(CC) $(CFLAGS) -o $(BUILDDIR)NativeCppHeatEquationSolverOCLMPI.o $(SRCDIR)NativeCppHeatEquationSolverOCLMPI.cpp
		
clean :
	rm *
